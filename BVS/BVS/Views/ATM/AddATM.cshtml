@{
    ViewData["Title"] = "AddATM";
}

<h2>Pridėti naują bankomatą</h2>
@using (Html.BeginForm("AddATM", "ATM", FormMethod.Post))
{
    <p>Adresas: </p>
    <input type="text" class="form-control" name="Address" rows="1" placeholder="Gatvė pastato nr. miestas" style="resize: none" required=""> <br>
    <p>Papildoma informacija: </p>
    <textarea class="form-control" name="AdditionalInfo" rows="5" placeholder="Bankomato modelis, tikslesnė jo vieta pastate ir t.t" style="resize: none" required=""></textarea>
    <br>
    <button class="btn btn-info" type="submit">Sukurti</button>
}


