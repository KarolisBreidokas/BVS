@model List<BVS.Data.Models.ATM>
@{
    ViewData["Title"] = "ViewATMs";
}

<h2>Banomatai</h2>


@using (Html.BeginForm("ViewATMs", "ATM", FormMethod.Post))
{
    <input type="text" name="Search" placeholder="Search..." style="height:30px;">
    <button class="btn btn-info" type="submit">Ieškoti</button>
}

<button class="btn btn-info pull-right" type="button" onclick="location.href='@Url.Action("AddATM", "ATM")'">Pridėti bankomatą</button>
<br><br>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Adresas</th>
                <th>Papildoma informacija</th>
                <th>Būsena</th>
                <th>Ar prijungtas</th>
                <th>Atnaujinti</th>
                <th>Šalinti</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var atm in Model)
            {
                <tr>
                    <td>@atm.Address</td>
                    <td>@atm.AditionalInfo </td>
                    <td>@atm.State</td>
                    <td>
                        @if (atm.Online)
                        {
                            <p>Taip</p>
                        }
                        else
                        {
                            <p>Ne</p>
                        }
                    </td>
                    <td><button class="btn btn-info" type="button" onclick="location.href='@Url.Action("UpdateATM", "ATM",  new { atmId = atm.Id} )'" )'">Atnaujinti</button></td>
                    <td>
                        <button class="btn btn-info" type="button" data-toggle="modal" data-target="#myModal">Šalinti</button>
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <p>Ar tikrai norite pašalinti bankomatą esantį @atm.Address</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("RemoveATM", "ATM",  new { atmId = atm.Id} )'">Taip</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Ne</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            }

        </tbody>


    </table>

</div>